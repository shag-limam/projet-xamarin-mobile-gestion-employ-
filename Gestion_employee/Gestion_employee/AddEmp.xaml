<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestion_employee.AddEmp"  BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout   BackgroundColor="Black">
            <Label Text="Ajouter employee"
                FontSize="Large"/>
           
            <Entry x:Name="nom" Placeholder="nom" TextColor="white" PlaceholderColor="white"></Entry>
            <Entry x:Name="pr" Placeholder="prenom" TextColor="white" PlaceholderColor="white"></Entry>
            <Entry   x:Name="age" Placeholder="age" TextColor="white" PlaceholderColor="white"></Entry>
            <Entry x:Name="dep" Placeholder="id_departement" TextColor="white" PlaceholderColor="white" ></Entry>
            <Entry x:Name="sl" Placeholder="salaire" TextColor="white" PlaceholderColor="white" ></Entry>
            <Button VerticalOptions="Center" Text="Ajouter" TextColor="white" BackgroundColor="Transparent" BorderColor="white"
          CornerRadius="50" BorderWidth="1.5" Clicked="Button_Clicked"></Button>
    
        </StackLayout>
    </ContentPage.Content>
</ContentPage>