<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestion_employee.editdep" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Label Text="Modifier Departement"
                  FontSize="Large"/>
            <Entry   x:Name="id" Placeholder="id" TextColor="white" PlaceholderColor="white"></Entry>
            <Entry x:Name="nom" Placeholder="nom" TextColor="White" PlaceholderColor="white"></Entry>

            <Button VerticalOptions="Center" Text="Modifier" TextColor="White" BackgroundColor="Transparent" BorderColor="Purple"
          CornerRadius="50" BorderWidth="1.5" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>