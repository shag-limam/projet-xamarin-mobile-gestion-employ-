<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestion_employee.Adddep" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Label Text="Ajouter Departement"
                 FontSize="Large"/>
           
            <Entry x:Name="nom" Placeholder="nom" TextColor="White" PlaceholderColor="White"></Entry>
            
            <Button VerticalOptions="Center" Text="Ajouter" TextColor="White" BackgroundColor="Transparent" BorderColor="White"
          CornerRadius="50" BorderWidth="1.5" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>